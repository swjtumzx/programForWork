{
    "compilerOptions": {
      "outDir": "dist",
      "module": "ESNext",
      "target": "ES5",
      "declaration": true,
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "skipLibCheck":true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "removeComments": true,
      "noEmit": false
    },
    "include": ["src"],
    "exclude": ["src/**/*.test.tsx"],
  }